
<div class="panel panel-default sign_up_container">
  <div class="panel-heading text-center">登陆</div>
  <div class="panel-body">
        <%= form_tag(sessions_path, method: 'post') do |f| %>
        <div class="form-group">
          <%= label_tag :email, '邮箱或者手机号*' %>
          <%= text_field_tag :email, nil,class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, '密码*' %>
          <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= check_box_tag :remember, params[:remember], true %>
          <%= label_tag :remember, '记住我' %>
        </div>
        <%= submit_tag '登陆', class:'btn btn-success btn-block' %>
    <% end %>
  </div>
</div>